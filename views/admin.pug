extends layout

block content
  h1= title
  p Welcome to #{title} - you are in admin mode
  a(href='#') Add new book
  ul
    each book in books
      li(id='title'+book.id) #{book.title}
      li(id='author'+book.id) #{book.author}
      li(id='genre'+book.id) #{book.genre}
      li(id='description'+book.id) #{book.description}
      button(onclick='edit('+book.id+', \''+book.title+'\')') Edit
