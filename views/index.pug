extends layout

block content
  h1= title
  p Welcome to #{title} the best bookstore around!
  h4 Pages:
  - var i = -1;
  while ++i < `${count}`
    a.pageLink(href='/list/' + `${i+1}`) #{i+1}
  ul.bookList
    each book in books
      li.book
        p=book.title
          .imageContainer
            img(src=book.img_url)
